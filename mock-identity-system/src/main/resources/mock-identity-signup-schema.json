{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$defs": {
    "langField": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "language",
          "value"
        ],
        "additionalProperties": false
      }
    }
  },
  "properties": {
    "individualId": {
      "type": "string",
      "pattern": "^\\+855[1-9]\\d{7,8}$"
    },
    "fullName": {
      "allOf": [
        { "$ref": "#/$defs/langField" },
        {
          "items": {
            "properties": {
              "value": {
                "pattern": "^(?=\\S)[ក-\u17FF᧠-᧿ᨀ-\u1A9F ]{1,30}$"
              },
              "language": {
                "type": "string",
                "enum": ["khm"]
              }
            }
          }
        }
      ]
    },
    "preferredLang": {
      "type": "string",
      "enum": ["khm"]
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+855[1-9]\\d{7,8}$"
    },
    "password": {
      "type": "string",
      "pattern": "\\S"
    }
  },
  "required": [
    "individualId",
    "fullName",
    "phone",
    "password"
  ],
  "additionalProperties": true
}
